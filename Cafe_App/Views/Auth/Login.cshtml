@using Cafe_App.Localizations
@using Cafe_App.Models.Auth
@model LoginUserViewModel

@{
    Layout ="~/Views/Shared/_LayoutAuth.cshtml";
}

<form method="post">
    <div>
        @Html.TextBoxFor(x => x.UserName, new { placeholder = "логин" })
    </div>
    <div>
        @Html.TextBoxFor(x => x.Password, new { @type = "password", placeholder = "пароль" })
    </div>
    <div>
        <button type="submit">@Cafe.Login</button>
    </div>
</form>
