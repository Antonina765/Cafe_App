@using Cafe_App.Services
@inject UserService userService
<!DOCTYPE html>
<html>
<head>
    <title> Cafe app </title>
    <link href="~/css/cafe/style.css" rel="stylesheet" />
    <link href="~/css/cafe/button.css" rel="stylesheet" />
    
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/ajaxHelper.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    @RenderSection("Styles", false)
    @RenderSection("Scripts", false)
</head>
<body>
    <header class="head-page">
        <div class="logotip">
            <img src="~/images/cafes/logotype.png" alt="logotype" />
        </div>
        <div class="name">Cafes</div>
        <div class="block-of-profile">
            <img src="@userService.GetAvatar()" alt="avatar" class="avatar" />
            <li><a class="log-sing" href="/Cafe/Profile">Profile</a></li>
        </div>
    </header>

    <!-- Меню под шапкой, такой же ширины -->
    <div class="menu-bar">
        <nav class="menu-list">
            <ul>
                <li class="menu-item"><a href="/Cafe/Index">Cafes</a></li>
                <li class="menu-item"><a href="/Cafe/Chat">Chat</a></li>
            </ul>
                <!-- Новый элемент меню для смены языка -->
            <div class="menu-item dropdown">
                <button class="dropbtn">Язык</button>
                <div class="dropdown-content">
                    <a href="/Cafe/UpdateLocale?language=En">English</a>
                    <a href="/Cafe/UpdateLocale?language=Ru">Русский</a>
                </div>
                </div>
        </nav>
    </div>

    <main>
        @RenderBody()
    </main>
</body>
</html>