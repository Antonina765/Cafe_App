@using Cafe_App.Localizations
@using Cafe_App.Models.Admin
@model AdminUserViewModel

<div class="users">
    <h1>@Cafe.Users</h1>
    @foreach (var user in Model.Users)
    {
        <div>
            @user.Name
            @foreach (var role in user.Roles)
            {
                <span class="role">@role</span>
            }

            <form action="/Admin/UpdateRole">
                @Html.Hidden("userId", user.Id)

                <span class="roles">
                    @foreach (var role in Model.Roles)
                    {
                        <label class="role">
                            @role.Text
                            <input name="role" type="checkbox" value="@role.Value" />
                        </label>
                    }
                    <button>@Cafe.Update_role</button>
                </span>
            </form>
        
            <a class="delete-user" href="/admin/DeleteUser?id=@user.Id" data-username="@user.Name">@Cafe.Delete</a>
        </div>
    }
</div>
