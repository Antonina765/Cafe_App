@using Cafe_App.Localizations
@model Cafe_App.Models.Cafe.ProfileViewModel

@{
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}

<div class="profile">
    <div>
        <h1>@Model.UserName</h1>
    </div>

    <div>@Cafe.Avatar</div>
    <div class="avatar-image">
        <img class="avatar" src="@Model.AvatarUrl" style="max-height: 100px" />
    </div>
    <div>
        <form action="/Cafe/UpdateAvatar" method="post" enctype="multipart/form-data">
            <input type="file" name="avatar" />
            <button type="submit">@Cafe.Update_avatar</button>
        </form>
    </div>
    <div class="profile-bookings">
        <h2>Мои бронирования</h2>
        @if(Model.Bookings != null && Model.Bookings.Any())
        {
        <ul>
            @foreach(var booking in Model.Bookings)
            {
            <li>
                <strong>@booking.CafeTitle</strong> – @booking.BookingDate.ToString("dd.MM.yyyy HH:mm")
            </li>
            }
        </ul>
        }
        else
        {
        <p>У вас пока нет бронирований.</p>
        }
    </div>
</div>