@using Cafe_App.Localizations
@using Cafe_App.Models.Cafe
@model ChatViewModel

@{
    Layout ="~/Views/Shared/_LayoutCafe.cshtml";
}

@section Scripts {
    <script src="~/js/chat.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/chat.css" />
}

<!-- Основной контейнер с двумя колонками -->
<div class="container">
    <!-- Левая колонка: чат -->
    <div class="chat-section">
        <!-- Скрытые данные пользователя -->
        <input type="hidden" class="user-id" value="@Model.UserId" />
        <input type="hidden" class="user-name" value="@Model.UserName" />

        <!-- Область сообщений -->
        <div class="chat-messages">
            <div class="messages">
                <div class="message template">***</div>
                @* Здесь будут добавляться сообщения *@
            </div>
        </div>

        <!-- Поле ввода нового сообщения -->
        <div class="chat-input">
            <input class="new-message" placeholder="Введите сообщение..." />
            <button class="send-new-message" type="button">@Cafe.Send</button>
        </div>

        <!-- Кнопка для дополнительного действия (например, шутка) -->
        <div class="chat-fun">
            <button type="button">@Cafe.Do_fun</button>
        </div>
    </div>

    <!-- Правая колонка: изображение собаки и факт -->
    <div class="dog-section">
        <img src="@Model.DogImageSrc" alt="Dog Image" />
        <div class="fact">
            <strong>@Cafe.Fact @Model.TheNumber</strong>
            <div>@Model.FactAboutNumber</div>
        </div>
    </div>
</div>